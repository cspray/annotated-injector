<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
    findUnusedCode="false"
    errorBaseline="known-issues.xml"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <plugins>
        <pluginClass class="Cspray\Phinal\Plugin" />
    </plugins>

    <issueHandlers>
        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
                <file name="src/Definition/AliasDefinitionBuilder.php" />
                <file name="src/Definition/ContainerDefinitionBuilder.php" />
                <file name="src/Definition/InjectDefinitionBuilder.php" />
                <file name="src/Definition/ServiceDefinitionBuilder.php" />
                <file name="src/Definition/ServiceDelegateDefinitionBuilder.php" />
                <file name="src/Definition/ServicePrepareDefinitionBuilder.php" />
            </errorLevel>
        </PropertyNotSetInConstructor>
    </issueHandlers>

</psalm>
