<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
    findUnusedCode="false"
    errorBaseline="known-issues.xml"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <plugins>
        <pluginClass class="Cspray\Phinal\Plugin" />
    </plugins>
    
    <stubs>
        <file name="stubs.php"/>
    </stubs>

    <issueHandlers>
        <PropertyNotSetInConstructor>
            <!-- We expect these properties not to be set in constructor as part of the Builder pattern -->
            <!-- The property potentially being set or not is handled at runtime -->
            <errorLevel type="suppress">
                <file name="src/Definition/ContainerDefinitionBuilder.php" />
            </errorLevel>
        </PropertyNotSetInConstructor>

        <MissingTemplateParam>
            <errorLevel type="suppress">
                <!-- This anonymous class is 100% documented with the appropriate template param but it is not getting picked up properly -->
                <file name="src/Bootstrap/ServiceWiringListener.php" />
            </errorLevel>
        </MissingTemplateParam>
    </issueHandlers>

</psalm>
